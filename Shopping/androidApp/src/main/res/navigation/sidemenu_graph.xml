<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidemenu_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_todoDetailFragment"
            app:destination="@id/todoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome"/>
    <fragment
        android:id="@+id/shopByCategoryFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.ShopByCategoryFragment"
        android:label="Shop by Category"
        tools:layout="@layout/fragment_shop_by_category" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.AccountDetailsFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_account_details" />
    <action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/todoDetailFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.TodoDetailFragment"
        android:label="TodoDetailFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        />
    <fragment
        android:id="@+id/imageViewPagerFragment"
        android:name="com.pru.shopping.androidApp.ui.fragments.ImageViewPagerFragment"
        android:label="ImageViewPagerFragment" />
    <dialog
        android:id="@+id/sampleBottomSheet"
        android:name="com.pru.shopping.androidApp.ui.SampleBottomSheet"
        android:label="SampleBottomSheet" />
    <action android:id="@+id/action_global_sampleBottomSheet" app:destination="@id/sampleBottomSheet" /><action android:id="@+id/action_global_homeFragment" app:destination="@id/homeFragment"/><action android:id="@+id/action_global_shopByCategoryFragment" app:destination="@id/shopByCategoryFragment"/><action android:id="@+id/action_global_imageViewPagerFragment" app:destination="@id/imageViewPagerFragment"/>
</navigation>