<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="cloud.mariapps.chatapp.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="cloud.mariapps.chatapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_jobOrderFilterFragment"
            app:destination="@id/jobOrderFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="cloud.mariapps.chatapp.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/jobOrderFilterFragment"
        android:name="cloud.mariapps.chatapp.ui.joborderfilter.JobOrderFilterFragment"
        tools:layout="@layout/fragment_job_order_filter" >
        <action
            android:id="@+id/action_jobOrderFilterFragment_to_jobOrderFragment"
            app:destination="@id/jobOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatScreenFragment"
        android:name="cloud.mariapps.chatapp.ui.chat.ChatScreenFragment"
        tools:layout="@layout/fragment_chat_screen" >
        <action
            android:id="@+id/action_chatScreenFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_chatScreenFragment_to_mediaPreviewDialog"
            app:destination="@id/mediaPreviewDialog" />
        <action
            android:id="@+id/action_chatScreenFragment_to_videoFragment"
            app:destination="@id/videoFragment" />
        <action
            android:id="@+id/action_chatScreenFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="cloud.mariapps.chatapp.ui.camera.CameraFragment"
        tools:layout="@layout/fragment_camera" />
    <dialog
        android:id="@+id/mediaPreviewDialog"
        android:name="cloud.mariapps.chatapp.ui.camera.MediaPreviewDialog"
        tools:layout="@layout/dialog_media_preview" >
        <argument
            android:name="mediaResult"
            app:argType="cloud.mariapps.chatapp.ui.camera.CameraResultBack" />
    </dialog>
    <fragment
        android:id="@+id/jobOrderFragment"
        android:name="cloud.mariapps.chatapp.ui.joborder.JobOrderFragment"
        tools:layout="@layout/fragment_job_order" >
        <action
            android:id="@+id/action_jobOrderFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
    </fragment>
    <fragment
        android:id="@+id/usersFragment"
        android:name="cloud.mariapps.chatapp.ui.users.UsersFragment"
        tools:layout="@layout/fragment_users" >
        <action
            android:id="@+id/action_usersFragment_to_chatScreenFragment"
            app:destination="@id/chatScreenFragment"
            app:popUpTo="@id/homeFragment" />
        <argument
            android:name="fromScreen"
            app:argType="cloud.mariapps.chatapp.utils.Constants$FromScreen" />
        <action
            android:id="@+id/action_usersFragment_self"
            app:destination="@id/usersFragment"
            app:popUpTo="@id/chatScreenFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/videoFragment"
        android:name="cloud.mariapps.chatapp.ui.camera.VideoFragment"
        tools:layout="@layout/fragment_video" />
</navigation>