<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/date" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBusinessNameLabel"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/tvBusiness"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTaxName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/tax_name" />

            <TextView
                android:id="@+id/tvTaxName"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/amount" />

            <TextView
                android:id="@+id/tvAmount"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/payment_mode" />

            <TextView
                android:id="@+id/tvPaymentMode"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCollectedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/collected_by" />

            <TextView
                android:id="@+id/tvCollectedBy"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAgentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/agent_type" />

            <TextView
                android:id="@+id/tvPPSUserType"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/vehicle_number" />

            <TextView
                android:id="@+id/tvVehicleNumber"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTaxPayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/tax_payer" />

            <TextView
                android:id="@+id/tvTaxPayer"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/status" />

            <TextView
                android:id="@+id/tvStatus"
                style="@style/TextBody" />

        </LinearLayout>


    </LinearLayout>

</layout>