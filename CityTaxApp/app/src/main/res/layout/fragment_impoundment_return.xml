<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment" />

                            <TextView
                                android:id="@+id/tvImpoundment"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llVoucherno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/vehicle_registration_no" />

                            <TextView
                                android:id="@+id/tvVehicleNumber"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llOwnerHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/owner" />

                            <TextView
                                android:id="@+id/tvOwner"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/phone_number" />

                            <TextView
                                android:id="@+id/tvPhoneNumber"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/total_amount_due" />

                            <TextView
                                android:id="@+id/tvTotalDue"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment_date" />

                            <TextView
                                android:id="@+id/tvImpounmentDate"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment_type" />

                            <TextView
                                android:id="@+id/tvImpounmentType"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment_sub_type" />

                            <TextView
                                android:id="@+id/tvImpounmentSubType"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment_reason_imp" />

                            <TextView
                                android:id="@+id/tvImpounmentReason"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impoundment_remarks" />

                            <TextView
                                android:id="@+id/tvImpounmentRemarks"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/police_station" />

                            <TextView
                                android:id="@+id/tvPoliceStation"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impound_return_number" />

                            <TextView
                                android:id="@+id/tvInvoiceNo"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/return_date" />

                            <TextView
                                android:id="@+id/tvReturnDate"
                                style="@style/TextBody" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llImpoundQty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/impound_quantity" />

                            <TextView
                                android:id="@+id/tvImpoundqty"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llReturnQty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/return_quantity" />

                            <TextView
                                android:id="@+id/tvReturnQty"
                                style="@style/TextBody" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llReturnAmountPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/TextHeader"
                                android:text="@string/return_amount_paid" />

                            <TextView
                                android:id="@+id/tvReturnAmountPaid"
                                style="@style/TextBody" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

