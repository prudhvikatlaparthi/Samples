<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">


            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/motion_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                app:layoutDescription="@xml/fragment_summary_transition_scene">

                <LinearLayout
                    android:id="@+id/llHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/horizontal_spacing"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgQRCode"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                    <include
                        android:id="@+id/qrCodeWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        layout="@layout/layout_qr_code_label"/>
                    <LinearLayout
                        android:id="@+id/llSycoTaxID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/syco_tax_id" />

                        <TextView
                            android:id="@+id/txtSycoTaxID"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRegistrationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/registration_date" />

                        <TextView
                            android:id="@+id/txtRegistrationDate"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSerialNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/serial_no" />

                        <TextView
                            android:id="@+id/txtSerialNo"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llWeaponType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/weapon_type" />

                        <TextView
                            android:id="@+id/txtWeaponType"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/make" />

                        <TextView
                            android:id="@+id/txtMake"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/model" />

                        <TextView
                            android:id="@+id/txtModel"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPurposeOfPossession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/purpose_of_possession" />

                        <TextView
                            android:id="@+id/txtPurposeOfPossession"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/description" />

                        <TextView
                            android:id="@+id/txtDescription"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEstimatedTaxAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/estimated_tax_amount" />

                        <TextView
                            android:id="@+id/txtEstimatedTaxAmount"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/status" />

                        <TextView
                            android:id="@+id/txtStatus"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/owner_name" />

                        <TextView
                            android:id="@+id/txtOwnerName"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:text="@string/phone_number" />

                        <TextView
                            android:id="@+id/txtPhoneNumber"
                            style="@style/TextBody"
                            android:layout_weight="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOutstandings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dotted_line" />

                        <TextView
                            android:id="@+id/txtOutstanding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="3"
                            android:drawableTop="@drawable/dotted_line"
                            android:text="@string/title_outstandings"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/dotted_line" />

                    </LinearLayout>

                </LinearLayout>

                <ExpandableListView
                    android:id="@+id/listView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:nestedScrollingEnabled="true"
                    android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llHeader" />

            </androidx.constraintlayout.motion.widget.MotionLayout>

        <LinearLayout
            android:id="@+id/llPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/print" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>