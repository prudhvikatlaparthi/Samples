<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/no_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_no" />

                <TextView
                    android:id="@+id/tvViolationNo"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVoucherno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_date" />

                <TextView
                    android:id="@+id/tv_violation_date"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_type" />

                <TextView
                    android:id="@+id/tv_violation_type"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llClass_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_class" />

                <TextView
                    android:id="@+id/tv_violation_class"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_details" />

                <TextView
                    android:id="@+id/tvViolationDetails"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llVehicleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/vehicle_no" />

                <TextView
                    android:id="@+id/tvVehicleNumber"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llVehicleOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/vehicle_owner" />

                <TextView
                    android:id="@+id/tvVehicleOwner"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/driver" />

                <TextView
                    android:id="@+id/tv_driver"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/violator" />

                <TextView
                    android:id="@+id/tv_violator"
                    style="@style/TextBody" />

            </LinearLayout>

            <include
                android:id="@+id/ticketChequeDetailsWrapper"
                layout="@layout/list_item_cheque_details"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/llCurrentDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/current_due" />

                <TextView
                    android:id="@+id/tvCurrentDue"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMinimumPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/minimum_pay_amount" />

                <TextView
                    android:id="@+id/tvMinPayAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTotalPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/total_amount" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/TextBody" />

            </LinearLayout>

         <LinearLayout
                android:id="@+id/llQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
             android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/quantity" />

                <TextView
                    android:id="@+id/tv_Quantity"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBtnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pay" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</layout>
