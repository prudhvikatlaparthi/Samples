<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/booking_asset"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookingAsset"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/booking_asset_id"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookingAssetId"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/booking_date"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookingDate"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/booking_period"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBookingPeriod"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillingCycleLabel"
                style="@style/ReceiptTextHeader"
                android:text="@string/billing_cycle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBillingCycle"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

        <!--   <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/ten_dp"
               android:orientation="horizontal">

               <TextView
                   style="@style/ReceiptTextHeader"
                   android:text="@string/unit_price"
                   android:textAllCaps="true"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/txtUnitPrice"
                   style="@style/ReceiptTextBody"
                   android:textStyle="bold" />
           </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSecurityDepositLabel"
                style="@style/ReceiptTextHeader"
                android:text="@string/booking_security_deposit"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSecurityDeposit"
                style="@style/ReceiptTextBody"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>