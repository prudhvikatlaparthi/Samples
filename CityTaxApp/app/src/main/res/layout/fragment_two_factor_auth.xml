<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragments.TwoFactorAuthFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/QRimageView_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/secretKeyTextView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secret_key_text"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/QRimageView_id" />

            <TextView
                android:id="@+id/secretKeyText_id"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secretKeyTextView_id" />

            <ImageButton
                android:id="@+id/copyBtn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/eight_dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_copy"
                app:layout_constraintBottom_toBottomOf="@+id/secretKeyText_id"
                app:layout_constraintStart_toEndOf="@+id/secretKeyText_id"
                app:layout_constraintTop_toTopOf="@+id/secretKeyText_id" />

            <EditText
                android:id="@+id/codeText_id"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="@string/hint_text"
                android:inputType="number"
                android:maxLength="6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/sixteen_dp"
                app:layout_constraintTop_toBottomOf="@+id/secretKeyText_id" />

            <Button
                android:id="@+id/loginBtn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:text="@string/submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/codeText_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
