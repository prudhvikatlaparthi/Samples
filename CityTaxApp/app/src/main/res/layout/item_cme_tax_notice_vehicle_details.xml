<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten_dp">

        <TextView
            style="@style/ReceiptTextHeader"
            android:text="@string/receipt_vehicle_type"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtVehicleType"
            style="@style/ReceiptTextBody"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal">

        <TextView
            style="@style/ReceiptTextHeader"
            android:text="@string/receipt_vehicle_number"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtVehicleNo"
            style="@style/ReceiptTextBody"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal">

        <TextView
            style="@style/ReceiptTextHeader"
            android:text="@string/vehicle_tax_amount"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtCarrierAmount"
            style="@style/ReceiptTextBody"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/colorPrimary" />

</LinearLayout>
</layout>