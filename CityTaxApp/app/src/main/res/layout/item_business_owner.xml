<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/mobile_no" />

            <TextView
                android:id="@+id/tvMblNo"
                style="@style/TextBody" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOwnerNameLabel"
                style="@style/TextHeader"
                android:text="@string/citizen_name" />

            <TextView
                android:id="@+id/tvOwner"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtIdLabel"
                style="@style/TextHeader"
                android:text="@string/citizen_id"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tvBusinessOwnerID"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSycoTaxID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtSycoTaxIdLabel"
                style="@style/TextHeader"
                android:text="@string/citizen_syco_tax_id" />

            <TextView
                android:id="@+id/tvSycoTaxID"
                style="@style/TextBody" />

        </LinearLayout>

    </LinearLayout>

</layout>