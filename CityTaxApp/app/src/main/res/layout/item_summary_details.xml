<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/agent_name" />

            <TextView
                android:id="@+id/tvAgentName"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/agent_type" />

            <TextView
                android:id="@+id/tvAgentType"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/mobile_no" />

            <TextView
                android:id="@+id/tvMobileNo"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/email" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCreditBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/credit_balance" />

            <TextView
                android:id="@+id/tvCreditBalance"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCashLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/cash_limit" />

            <TextView
                android:id="@+id/tvCashLimit"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/collection_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_collection"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/incidents_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_incidents"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

</layout>