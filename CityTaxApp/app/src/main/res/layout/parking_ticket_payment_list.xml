<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/parent_parking_type" />

                <TextView
                    android:id="@+id/tvParentParkingType"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVoucherno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/transaction_date" />

                <TextView
                    android:id="@+id/tv_violation_date"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/parking_place_id" />

                <TextView
                    android:id="@+id/tvParkingPlaceId"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/parking_type" />

                <TextView
                    android:id="@+id/tvParkingType"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/parking_place" />

                <TextView
                    android:id="@+id/tvParkingPlace"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/vehicle_no" />

                <TextView
                    android:id="@+id/tvVehicleNumber"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/vehicle_owner" />

                <TextView
                    android:id="@+id/tvVehicleOwner"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/driver" />

                <TextView
                    android:id="@+id/tv_driver"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/violator" />

                <TextView
                    android:id="@+id/tv_violator"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/current_due" />

                <TextView
                    android:id="@+id/tvCurrentDue"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/minimum_pay_amount" />

                <TextView
                    android:id="@+id/tvMinPayAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/amount" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pay" />

            </LinearLayout>

        </LinearLayout>

