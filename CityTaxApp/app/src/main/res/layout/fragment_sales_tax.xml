<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomConstraintLayout"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/rootConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLayoutBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llTopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/vertical_spacing"
                                android:text="@string/citizen"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/vertical_spacing"
                                android:layout_marginRight="@dimen/vertical_spacing"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/phone">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtPhoneNumber"
                                        style="@style/TextInputEntryStyle"
                                        android:imeOptions="actionSearch"
                                        android:inputType="number"
                                        android:maxLength="16" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <ProgressBar
                                    android:id="@+id/citizenProgressView"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="@string/phone"
                                        android:visibility="gone" />


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtCustomerNameLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/name"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtCustomerName"
                                            style="@style/TextInputEntryStyle" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtCountryLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/country"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtCountry"
                                            style="@style/TextInputEntryStyle"
                                            android:focusable="false" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtStateLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/state"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtState"
                                            style="@style/TextInputEntryStyle"
                                            android:focusable="false" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtCityLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/city"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtCity"
                                            style="@style/TextInputEntryStyle"
                                            android:focusable="false" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="12dp"
                                        android:layout_marginEnd="12dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:text="@string/zone"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                        <androidx.appcompat.widget.AppCompatSpinner
                                            android:id="@+id/spnZone"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/vertical_spacing"
                                            android:layout_marginRight="@dimen/vertical_spacing"
                                            android:layout_weight="1"
                                            android:minHeight="48dp"
                                            android:paddingEnd="@dimen/eighteen_sp"
                                            android:spinnerMode="dialog" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginStart="12dp"
                                        android:layout_marginEnd="12dp"
                                        android:background="@color/colorGray" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="12dp"
                                        android:layout_marginEnd="12dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:text="@string/sector"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                        <androidx.appcompat.widget.AppCompatSpinner
                                            android:id="@+id/spnSector"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/vertical_spacing"
                                            android:layout_marginRight="@dimen/vertical_spacing"
                                            android:layout_weight="1"
                                            android:minHeight="48dp"
                                            android:paddingEnd="@dimen/eighteen_sp"
                                            android:spinnerMode="dialog" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginStart="12dp"
                                        android:layout_marginEnd="12dp"
                                        android:background="@color/colorGray" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtStreetLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/street"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtStreet"
                                            style="@style/TextInputEntryStyle"
                                            android:inputType="textCapWords"
                                            android:maxLength="80"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtSectionLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/plot"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtSection"
                                            style="@style/TextInputEntryStyle"
                                            android:inputType="textCapWords"
                                            android:maxLength="20"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtLotLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/block"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtLot"
                                            style="@style/TextInputEntryStyle"
                                            android:inputType="textCapWords"
                                            android:maxLength="20"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtParcelLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/door_no"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtParcel"
                                            style="@style/TextInputEntryStyle"
                                            android:inputType="textCapWords"
                                            android:maxLength="20"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/edtZipLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/vertical_spacing"
                                        android:layout_marginRight="@dimen/vertical_spacing"
                                        android:hint="@string/zipcode"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edtZip"
                                            style="@style/TextInputEntryStyle"
                                            android:inputType="textCapWords"
                                            android:maxLength="14"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <TextView
                                        android:id="@+id/btnShowMoreOrLess"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end|center_vertical"
                                        android:layout_marginTop="@dimen/vertical_spacing"
                                        android:layout_marginEnd="@dimen/vertical_spacing"
                                        android:layout_marginBottom="@dimen/vertical_spacing"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="@string/show_more"
                                        android:textColor="@color/lite_blue" />

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_marginLeft="@dimen/vertical_spacing"
                                    android:layout_marginRight="@dimen/vertical_spacing"
                                    android:background="#FAFAFA"
                                    android:elevation="@dimen/margin_48dp"
                                    android:orientation="vertical"
                                    android:scrollbars="vertical"
                                    android:visibility="gone"
                                    tools:listitem="@layout/citizen_layout_item" />
                            </FrameLayout>
                            <!--<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/vertical_spacing"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/new_citizen"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/tvSalesCreateCustomer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/create"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp"
                                    android:textStyle="italic|bold" />
                            </LinearLayout>-->

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/vertical_spacing"
                                android:text="@string/products"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />

                            <!--<include
                                android:id="@+id/layoutProduct"
                                layout="@layout/item_sellable_product" />-->

                                <androidx.appcompat.widget.SearchView
                                    android:id="@+id/searchView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:iconifiedByDefault="false"
                                    app:queryHint="@string/enter_prod_name"
                                    app:searchIcon="@drawable/ic_search" />


                            <com.sgs.citytax.ui.custom.NonScrollableRecyclerView
                                android:id="@+id/rcvSalesProducts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView">

            <TextView
                android:id="@+id/tvSalesTotalLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/total"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSalesTotal"
                app:layout_constraintBottom_toBottomOf="@+id/tvSalesTotal" />

            <TextView
                android:id="@+id/tvSalesTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSalesProceed"
                app:layout_constraintStart_toEndOf="@+id/tvSalesTotalLabel"
                />

            <TextView
                android:id="@+id/tvFinalPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_final_price"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/tvSalesTotalLabel"
                app:layout_constraintBottom_toBottomOf="@+id/tvFinalPrice"
                app:layout_constraintTop_toTopOf="@+id/tvFinalPrice"/>

            <TextView
                android:id="@+id/tvFinalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tvSalesTotal"
                app:layout_constraintBottom_toTopOf="@+id/tvSalesRounding"
                app:layout_constraintStart_toEndOf="@+id/tvFinalPriceLabel"
                app:layout_constraintEnd_toStartOf="@+id/btnSalesProceed" />

            <TextView
                android:id="@+id/tvSalesRoundingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rounding"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/tvFinalPriceLabel"
                app:layout_constraintBottom_toBottomOf="@+id/tvSalesRounding"
                app:layout_constraintTop_toTopOf="@+id/tvSalesRounding"/>

            <TextView
                android:id="@+id/tvSalesRounding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tvFinalPrice"
                app:layout_constraintStart_toEndOf="@+id/tvSalesRoundingLabel"
                app:layout_constraintEnd_toStartOf="@+id/btnSalesProceed"/>

            <Button
                android:id="@+id/btnSalesProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>
