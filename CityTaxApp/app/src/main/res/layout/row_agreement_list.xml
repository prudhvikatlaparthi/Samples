<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sgs.citytax.ui.custom.swipeUtils.CustomSwipeView
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        app:dragEdge="right"
        app:swipeMode="same_level">

        <LinearLayout
            android:id="@+id/belowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_edit"
                android:drawablePadding="@dimen/three_dp"
                android:gravity="center"
                android:longClickable="false"
                android:minWidth="65dp"
                android:padding="@dimen/vertical_spacing"
                android:singleLine="true"
                android:text="@string/edit"
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="false"
                android:textSize="@dimen/sixteen_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAgreement"
                android:layout_width="@dimen/item_img_width_height"
                android:layout_height="@dimen/item_img_width_height"
                android:layout_margin="8dp"
                android:visibility="gone"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/eight_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:id="@+id/llRefNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/agreement_no" />

                        <TextView
                            android:id="@+id/tvReffNumber"
                            style="@style/TextBody" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_agreement_ref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/aggreement_ref_no" />

                        <TextView
                            android:id="@+id/tvAgreementReffNumber"
                            style="@style/TextBody" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llAgreementDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/agreement_date" />

                        <TextView
                            android:id="@+id/tvAgreementDate"
                            style="@style/TextBody" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llValidupto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/valid_upto_date" />

                        <TextView
                            android:id="@+id/tvValidUpTo"
                            style="@style/TextBody" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llDueNoticeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/title_due_notice_type" />

                        <TextView
                            android:id="@+id/tvDueNoticeType"
                            style="@style/TextBody" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDueNoticeRefNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/due_notice_reference_no" />

                        <TextView
                            android:id="@+id/tvDueNoticeNo"
                            style="@style/TextBody" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextHeader"
                            android:text="@string/status" />

                        <TextView
                            android:id="@+id/tvStatus"
                            style="@style/TextBody" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.sgs.citytax.ui.custom.swipeUtils.CustomSwipeView>

</layout>