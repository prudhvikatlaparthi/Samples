<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/service_invoice_details"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/label_service_request_no" />

                <TextView
                    android:id="@+id/txtServiceRequestNumber"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/service_request_date" />

                <TextView
                    android:id="@+id/txtServiceRequestDate"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/estimated_amount" />

                <TextView
                    android:id="@+id/txtEstimatedAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/advance_amount" />

                <TextView
                    android:id="@+id/txtAdvanceAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/extra_charges"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtExtraCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remarks"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/net_receivable" />

                <TextView
                    android:id="@+id/txtNetReceivable"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commissionPrctLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/commission_percentage" />

                <TextView
                    android:id="@+id/txtCommissionPercentage"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commissionAmtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/ten_dp">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/commission_amount" />

                <TextView
                    android:id="@+id/txtCommissionAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/ten_dp"
                android:padding="@dimen/vertical_spacing"
                android:text="@string/proceed" />


        </LinearLayout>

    </ScrollView>


</layout>