<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_date"
                    style="@style/TextHeader"
                    android:text="@string/str_sales_date" />

                <TextView
                    android:id="@+id/tvSalesDate"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSalesReceiptNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sales_receipt_no"
                    style="@style/TextHeader"
                    android:text="@string/str_sales_receipt_no" />

                <TextView
                    android:id="@+id/tvSalesReceiptNo"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTaxName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/headerTaxName"
                    style="@style/TextHeader"
                    android:text="@string/title_taxes" />

                <TextView
                    android:id="@+id/tvTaxName"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_order_no"
                    style="@style/TextHeader"
                    android:text="@string/sales_order_no" />

                <TextView
                    android:id="@+id/tvSalesOrderNo"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_amount"
                    style="@style/TextHeader"
                    android:text="@string/str_sales_amount" />

                <TextView
                    android:id="@+id/tvSalesAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llProsecutionFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/txt_prosecution_fees" />

                <TextView
                    android:id="@+id/prosecutionFees"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPenaltyAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/penalty_amount" />

                <TextView
                    android:id="@+id/penaltyAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTotalDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/total_due" />

                <TextView
                    android:id="@+id/totalDue"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPaymentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/payment_mode" />

                <TextView
                    android:id="@+id/tvPaymentMode"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/bank_name" />

                <TextView
                    android:id="@+id/bankName"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChequeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/cheque_number" />

                <TextView
                    android:id="@+id/chequeNumber"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChequeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/cheque_date" />

                <TextView
                    android:id="@+id/chequeDate"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChequeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/cheque_amount" />

                <TextView
                    android:id="@+id/chequeAmount"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/cheque_status" />

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sales_item"
                    style="@style/TextHeader"
                    android:text="@string/str_sales_item" />

                <TextView
                    android:id="@+id/tvSalesItem"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sales_item_code"
                    style="@style/TextHeader"
                    android:text="@string/str_sales_item_code" />

                <TextView
                    android:id="@+id/tvSalesItemCode"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/quantity_price"
                    style="@style/TextHeader"
                    android:text="@string/str_quantity" />

                <TextView
                    android:id="@+id/tvQuantity"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/price"
                    style="@style/TextHeader"
                    android:text="@string/str_price" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/citizen_name"
                    style="@style/TextHeader"
                    android:text="@string/str_citizen_name" />

                <TextView
                    android:id="@+id/tvCitizenName"
                    style="@style/TextBody" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/citizen_id_sycotax"
                    style="@style/TextHeader"
                    android:text="@string/citizen_syco_tax_id_label" />

                <TextView
                    android:id="@+id/tvCitizenSycotaxID"
                    style="@style/TextBody" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
