<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/vertical_spacing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llReceiptBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDuplicatePrints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/duplicate_print"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPrintCounts"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/receipt_asset_return"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgQRCode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@color/black" />
            <include
                android:id="@+id/qrCodeWrapper"
                layout="@layout/layout_qr_code_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:text="@string/txt_municipality_of_ougadougu"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_date_of_print"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDateOfPrint"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_assignment_number"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtReturnNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/five_dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_return_date_time"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAssetReturnDate"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_booking_request_number"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtBookingrequestNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_asset_name"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAssetName"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_sycotax_id"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSycoTaxID"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOdometerEndDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/odometer_end_date_time"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtOdometerEndDateTime"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/five_dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOdometerEndReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/odometer_end_reading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtOdometerendReading"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_receipt_taxation_year"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTaxationYear"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBusinessSycoTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_id_sycotax"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtBusinessSycoTaxID"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_return_to"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAssetreturnTo"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCitizenSycoTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/citizen_syco_tax_id"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtCitizenSycoTaxID"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/citizen_id_number"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtIDCardNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_phone_number"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/txtEmailLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/email"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_address_label"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/title_address"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAddress"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_state_label"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/state"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtState"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_city_label"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/city"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtCity"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_ardt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtArdt"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSectorLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/sector"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSector"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_section"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSection"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_lot"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtLot"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_parcel"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtParcel"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/asset_fine_details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/asset_receipt_fine_amount"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtFineAmount"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRemarksLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/remarks"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtRemarks"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/returned_by"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtReturnedBy"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="@string/nb"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTaxNoticeNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/print"/>

    </LinearLayout>

</LinearLayout>

</layout>
