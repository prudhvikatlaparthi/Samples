<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/label_incident_date" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/status" />

            <TextView
                android:id="@+id/tvStatus"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/priority" />

            <TextView
                android:id="@+id/tvPriority"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCreatedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/created_by" />

            <TextView
                android:id="@+id/tvCreatedBy"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/label_incident_type" />

            <TextView
                android:id="@+id/tvIncidentType"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIncidentSubType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/label_incident_sub_type" />

            <TextView
                android:id="@+id/tvIncidentSubType"
                style="@style/TextBody" />

        </LinearLayout>

    </LinearLayout>

</layout>