<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/no_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_no" />

                <TextView
                    android:id="@+id/tvViolationNo"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTicketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticketNumberHead"
                    style="@style/TextHeader"
                    android:text="@string/ticket_number" />

                <TextView
                    android:id="@+id/tvTicketNumber"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVoucherno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_date" />

                <TextView
                    android:id="@+id/tv_violation_date"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_type" />

                <TextView
                    android:id="@+id/tv_violation_type"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sub_type_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_sub_type" />

                <TextView
                    android:id="@+id/tv_violation_subtype"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_class" />

                <TextView
                    android:id="@+id/tv_violation_class"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details_head"
                    style="@style/TextHeader"
                    android:text="@string/violation_details" />

                <TextView
                    android:id="@+id/tvViolationDetails"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vehicle_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/vehicle_no" />

                    <TextView
                        android:id="@+id/tvVehicleNumber"
                        style="@style/TextBody" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/vehicle_owner" />

                    <TextView
                        android:id="@+id/tvVehicleOwner"
                        style="@style/TextBody" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/driver" />

                    <TextView
                        android:id="@+id/tv_driver"
                        style="@style/TextBody" />

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/impoundChequeDetailsWrapper"
                layout="@layout/list_item_cheque_details"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/pending_amount" />

                <TextView
                    android:id="@+id/tvpendingAmt"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/amount_paid" />

                <TextView
                    android:id="@+id/tvAmtPaid"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextHeader"
                    android:text="@string/quantity" />

                <TextView
                    android:id="@+id/tvQuantity"
                    style="@style/TextBody" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBtnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pay" />

            </LinearLayout>

        </LinearLayout>

