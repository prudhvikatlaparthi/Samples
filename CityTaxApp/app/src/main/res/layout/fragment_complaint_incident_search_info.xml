<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="@dimen/horizontal_spacing"
        android:paddingTop="@dimen/horizontal_spacing"
        android:paddingEnd="@dimen/horizontal_spacing"
        android:paddingBottom="@dimen/horizontal_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLabelComplaintNo"
                android:text="@string/label_complaint_no"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtComplaintNo"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLabelComplaint"
                android:text="@string/complaint_type"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtComplaint"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llComplaintSubType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtLabelComplaintSubType"
                android:text="@string/complaint_sub_type"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtComplaintSubType"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLabelComplaintDate"
                android:text="@string/complaint_date"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtComplaintDate"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtLabelPriority"
                android:text="@string/priority"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtPriority"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/status" />

            <TextView
                android:id="@+id/txtStatus"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                style="@style/TextHeader"
                android:text="@string/label_title" />

            <TextView
                android:id="@+id/txtTitle"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIssueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:text="@string/issue_description"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtIssueDescription"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llReportedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:text="@string/created_by"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtReportedBy"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:text="@string/zone"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtZone"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:text="@string/sector"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/txtSector"
                style="@style/TextBody"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/five_dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnIncident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_spacing"
                android:text="@string/menu_incidents"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</layout>