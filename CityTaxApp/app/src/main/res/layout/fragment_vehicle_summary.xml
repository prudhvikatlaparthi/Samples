<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:id="@+id/llReturn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fieldsLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_vehicle_sycotax_id" />

                    <TextView
                        android:id="@+id/tvVehicleSycotaxID"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVoucherno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_vehicle_registration_no"/>

                    <TextView
                        android:id="@+id/tvVehicleRegNo"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_vehicle_registration_date" />

                    <TextView
                        android:id="@+id/tvVehicleRegDate"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_vehicle_type" />

                    <TextView
                        android:id="@+id/tvVehicleType"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_power" />

                    <TextView
                        android:id="@+id/tvPower"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_seat_capacity" />

                    <TextView
                        android:id="@+id/tvSeatCapacity"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_fuel_type" />

                    <TextView
                        android:id="@+id/tvFuelType"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_horse_power" />

                    <TextView
                        android:id="@+id/tvHorsePower"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_load_capacity" />

                    <TextView
                        android:id="@+id/tvLoadCapacity"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_value" />

                    <TextView
                        android:id="@+id/tvValue"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_vehicle_owner" />

                    <TextView
                        android:id="@+id/tvVehicleOwner"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                android:id="@+id/llSycotaxID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSycotaxIDOf"
                    style="@style/TextHeader"
                    android:text="@string/citizen_syco_tax_id" />

                <TextView
                    android:id="@+id/tvSYcotaxID"
                    style="@style/TextBody"
                    android:layout_marginStart="@dimen/five_dp"/>

            </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llIDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/citizen_id_number" />

                    <TextView
                        android:id="@+id/tvIDCardNo"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_phone_number" />

                    <TextView
                        android:id="@+id/tvPhoneNumber"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_email" />

                    <TextView
                        android:id="@+id/tvEmail"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>


                <TextView
                    style="@style/ReceiptTextHeader"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_address"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextHeader"
                        android:text="@string/receipt_address" />

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyOne"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueOne"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyTwo"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueTwo"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyThree"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueThree"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyFour"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueFour"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyFive"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueFive"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeySix"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueSix"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSeven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeySeven"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueSeven"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtKeyEight"
                        style="@style/TextHeader" />

                    <TextView
                        android:id="@+id/txtValueEight"
                        style="@style/TextBody"
                        android:layout_marginStart="@dimen/five_dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/document_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fieldsLL"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/documents"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/document_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/document_layout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</layout>
