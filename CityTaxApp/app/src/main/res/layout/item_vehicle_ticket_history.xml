<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/llTicketId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/ticket_id" />

            <TextView
                android:id="@+id/txtTicketId"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDateLabel"
                style="@style/TextHeader"
                android:text="@string/violation_date" />

            <TextView
                android:id="@+id/txtViolationDate"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTypeLabel"
                style="@style/TextHeader"
                android:text="@string/violation_type" />

            <TextView
                android:id="@+id/txtViolationType"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/vehicle_no" />

            <TextView
                android:id="@+id/txtVehicleNo"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/driver_name" />

            <TextView
                android:id="@+id/txtDriverName"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/vehicle_owner" />

            <TextView
                android:id="@+id/txtVehicleOwner"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/driving_license_number" />

            <TextView
                android:id="@+id/txtDrivingLicenseNumber"
                style="@style/TextBody" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeader"
                android:text="@string/fine_amount" />

            <TextView
                android:id="@+id/txtFineAmount"
                style="@style/TextBody" />

        </LinearLayout>

    </LinearLayout>

</layout>
