                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ReceiptTextHeader"
                        android:text="@string/txt_parcel"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtParcel"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:gravity="center"
                    android:text="@string/txt_taxable_element"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    android:textStyle="bold" />
                <!--Start Residential Property tax details-->
                <LinearLayout
                    android:id="@+id/llResidentail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_property_type"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtResPropertyType"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_water_connection"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtWaterConnection"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_electricity_connection"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtElectricityConnection"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_electricity_phase"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtElectricityPhase"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_comfort_level"
                            android:textStyle="italic|bold"/>

                        <TextView
                            android:id="@+id/txtTaxableComfortLevel"
                            style="@style/ReceiptTextBody"
                            android:textStyle="italic|bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--End Residential Property tax details-->


                <!--Start Commercial Property tax details-->
                <LinearLayout
                    android:id="@+id/llComercial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_property_type"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtPropertyType"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal"
                       >

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_property_value"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtPropertyValue"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ReceiptTextHeader"
                            android:text="@string/receipt_property_rent_amount"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/txtPropertyRentAmount"
                            style="@style/ReceiptTextBody"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/ten_dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--End Commercial Property tax details-->

                <!--Start Land Tax detail-->
            <LinearLayout
                android:id="@+id/llLand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_land_property_type"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/txtPropertyTypeLand"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_land_use_type"
