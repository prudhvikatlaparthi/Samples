                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSycotaxId"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_property_id_sycotax"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSycoTaxID"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLandName"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_property_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPropertyName"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPropertyOwner"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_property_owner"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPropertyOwner"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCitizenSycoTax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvOwnerSycotaxId"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_property_owner_id_sycotax"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtCitizenSycoTaxID"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/ten_dp"/>

                </LinearLayout>

                <LinearLayout
