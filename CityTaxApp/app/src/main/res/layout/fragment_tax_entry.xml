<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBackground"
            app:layout_constraintBottom_toTopOf="@id/btnSave">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/vertical_spacing"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProduct"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:text="@string/product" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spnProduct"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:minHeight="48dp"
                                android:spinnerMode="dialog" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvActivityDomain"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:text="@string/activity_domain" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spnActivityDomain"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:minHeight="48dp"
                                android:spinnerMode="dialog" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:id="@+id/llChildTabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/llAccountPhoneChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAccPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/title_phones"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAccountEmailsChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAccountEmails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/title_emails"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAccountAddressChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAccountAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/title_address"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llCorporateTurnOverChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtCorporateTurnOver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/corporate_turnover"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPropertyOwnerShipChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPropertyOwnership"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/property_ownership"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llVehicleOwnerShipChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtVehicleOwnership"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/vehicle_ownership"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPDOChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPublicDomainOccupancy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/public_domain_occupancy"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llROPChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRightOfPlaces"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/rights_of_places_in_markets"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llRentalDetailsChildTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRentalDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_arrow"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/title_rental_details"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorGrayLight" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

