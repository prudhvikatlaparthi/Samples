<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/txt_penalty_number"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtImpoundNumber"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/applied_on"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtAppliedOn"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViolationDetailsLabel"
                style="@style/ReceiptTextHeader"
                android:text="@string/violation_details"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtViolationDetails"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/txt_penalty_date"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtPenaltyDate"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/receipt_penalty_amount"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtPenaltyAmount"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/settled_amount"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtSettledAmount"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>
</layout>