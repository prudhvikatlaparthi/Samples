<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/vertical_spacing">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llReceiptBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDuplicatePrints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/duplicate_print"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPrintCounts"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:text="@string/initial_out_standing_penalty_waive_off_receipt"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgQRCode"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@color/black" />
            <include
                android:id="@+id/qrCodeWrapper"
                layout="@layout/layout_qr_code_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:text="@string/txt_municipality_of_ougadougu"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_date_of_print"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDateOfPrint"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSycoTaxIDLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_id_sycotax"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSycoTaxID"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtBusinessNameLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_business_name"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtBusinessName"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llBusinessOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtBusinessOwnerLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_business_owner"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtBusinessOwner"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCitizenSycoTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtCitizenSycoTaxIDLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_property_owner_id_sycotax"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCitizenSycoTaxID"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtIDCardNumberLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/citizen_id_number"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIDCardNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llPropertyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_address_label"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_address"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_state_label"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_state"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtState"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_city_label"
                        style="@style/ReceiptTextHeader"
                        android:text="@string/receipt_city"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCity"
                        style="@style/ReceiptTextBody"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/ardt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtArdt"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSectorLabel"
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_receipt_sector"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSector"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_section"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSection"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_lot"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtLot"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_parcel"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtParcel"
                    style="@style/ReceiptTextBody"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:text="@string/nature_outstanding_waive_off"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_type"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutStandingType"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_number"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_year"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingYear"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_amount"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingAmount"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_due_amount"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingDueAmount"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_waive_off_number"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingWaiveOffNumber"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold"
                    android:layout_marginStart="@dimen/five_dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_waive_off_date"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingWaiveOffDate"
                    style="@style/ReceiptTextBody"
                    android:layout_marginStart="@dimen/five_dp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_waive_off_amount"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtOutstandingWaiveOffAmount"
                    style="@style/ReceiptTextBody"
                    android:layout_marginStart="@dimen/five_dp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/txt_stop_this_quittance_to_the_sum_of"
                    android:textAllCaps="true"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtAmountInWords"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_current_due_amount"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/txtDueAfterWaveOff"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/initial_outstanding_waive_off_remarks"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtRemarks"
                    style="@style/ReceiptTextBody"
                    android:layout_marginStart="@dimen/five_dp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ReceiptTextHeader"
                    android:text="@string/receipt_waive_off_by"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/txtWaivedOffBy"
                    style="@style/ReceiptTextBody"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtPoweredBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/print" />

    </LinearLayout>

</LinearLayout>
</layout>