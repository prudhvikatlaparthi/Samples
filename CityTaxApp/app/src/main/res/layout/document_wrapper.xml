<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNoDataFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/txt_message_capture_image"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/twenty_sp"
                android:visibility="visible" />
        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/horizontal_spacing"
            android:layout_marginTop="@dimen/horizontal_spacing"
            android:layout_marginEnd="@dimen/horizontal_spacing"
            android:layout_marginBottom="@dimen/horizontal_spacing"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_camera"
            android:tint="@color/white"
            app:fabSize="auto" />
    </LinearLayout>
</layout>