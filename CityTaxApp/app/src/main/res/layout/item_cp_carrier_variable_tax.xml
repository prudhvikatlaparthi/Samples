<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/txt_type_of_transport"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTypeOfTransport"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

     <!--   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="No Of vehicles"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txtNoOfVehicles"
                style="@style/ReceiptTextBody" />

        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/tarif_per_seat"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTarifPerSeat"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/total_seats"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTotalSeats"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/tarif_per_ton"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTarifPerTon"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ReceiptTextHeader"
                android:text="@string/total_ton_capacity"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTotalTonCapacity"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTotalAmountLabel"
                style="@style/ReceiptTextHeader"
                android:text="@string/total_amount"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTotalTotalAmount"
                style="@style/ReceiptTextBody"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

</layout>