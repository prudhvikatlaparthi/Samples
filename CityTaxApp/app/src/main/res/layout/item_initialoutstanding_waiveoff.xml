<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeyOne"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/fiscal_year" />

            <TextView
                android:id="@+id/txtValueOne"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeyTwo"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/tax_name" />

            <TextView
                android:id="@+id/txtValueTwo"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTaxSubType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtKeysix"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/occupancy_name" />

            <TextView
                android:id="@+id/txtValuesix"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeyThree"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/net_receivable" />

            <TextView
                android:id="@+id/txtValueThree"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeyFour"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/received_amount" />

            <TextView
                android:id="@+id/txtValueFour"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeySeven"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/lable_waived_off_amount" />

            <TextView
                android:id="@+id/txtValueSeven"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtKeyFive"
                style="@style/TextHeader"
                android:layout_weight="2"
                android:text="@string/due_amount" />

            <TextView
                android:id="@+id/txtValueFive"
                style="@style/TextBody"
                android:layout_weight="3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChildWaiveOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="@string/tax_waive_off"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</layout>